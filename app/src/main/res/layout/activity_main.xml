<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/r"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="258dp"
        android:layout_height="369dp"
        android:layout_marginTop="2dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@android:drawable/screen_background_dark_transparent" />

    <Button
        android:id="@+id/detailedButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="128dp"
        android:layout_marginBottom="8dp"
        android:backgroundTint="#FF5722"
        android:fontFamily="sans-serif-black"
        android:text="Detailed View"
        android:textColor="#000000"
        android:textColorHint="#000000"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/clearButton"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/clearButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="160dp"
        android:layout_marginBottom="128dp"
        android:backgroundTint="#E91E63"
        android:fontFamily="sans-serif-black"
        android:text="Clear"
        android:textColor="#000000"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/addInfoButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="53dp"
        android:layout_marginTop="170dp"
        android:backgroundTint="#FFEB3B"
        android:fontFamily="sans-serif-black"
        android:text="Add"
        android:textColor="#000000"
        android:textColorHint="#000000"
        android:textColorLink="#3F51B5"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@+id/inputMaxNumber"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/inputMinNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="9dp"
        android:ems="10"
        android:fontFamily="sans-serif-black"
        android:hint="Min Temperature"
        android:inputType="number"
        android:minHeight="48dp"
        android:textColor="#673AB7"
        android:textColorHint="#3E3E3E"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <EditText
        android:id="@+id/inputWeather"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="17dp"
        android:layout_marginTop="7dp"
        android:ems="10"
        android:fontFamily="sans-serif-black"
        android:hint="Enter the Weather:"
        android:inputType="text"
        android:minHeight="48dp"
        android:textColor="#9C27B0"
        android:textColorHint="#3A3A3A"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/inputMaxNumber" />

    <EditText
        android:id="@+id/inputMaxNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="17dp"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:fontFamily="sans-serif-black"
        android:hint="Max Temperature"
        android:inputType="number"
        android:minHeight="48dp"
        android:textColor="#9C27B0"
        android:textColorHint="#434343"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/inputMinNumber" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="226dp"
        android:layout_height="86dp"
        android:layout_marginStart="17dp"
        android:layout_marginTop="16dp"
        android:fontFamily="sans-serif-black"
        android:text="Enter the Min, Max Temperature and the Weather Below:"
        android:textColor="#673AB7"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/aveTempText"
        android:layout_width="179dp"
        android:layout_height="39dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="32dp"
        android:fontFamily="sans-serif-black"
        android:text="Average Temperature: "
        android:textColor="#9C27B0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/inputWeather" />

</androidx.constraintlayout.widget.ConstraintLayout>